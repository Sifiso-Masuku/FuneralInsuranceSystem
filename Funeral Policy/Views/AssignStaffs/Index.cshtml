@model IEnumerable<Funeral_Policy.Models.AssignStaff>

@{
    ViewBag.Title = "Index";
}

<html>
<head>

    <style>
        .webgrid-table {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            font-size: 1.2em;
            width: 100%;
            display: table;
            border-collapse: separate;
            border: solid 1px #98BF21;
            background-color: white;
        }

            .webgrid-table td, th {
                border: 1px solid #98BF21;
                padding: 3px 7px 2px;
            }
    </style>

</head>
<body>
    <center>

        <div style="background-color:whitesmoke; height:37px;width:85% ;font-size:15px;">
            <h2>Assigned Staff</h2>
        </div>
        <div class="card shadow mb-4" style="background-color:aliceblue;height:max-content; width:max-content;font-size:13px; top:auto">
            <div class="card-header ">


                @*<p>
                        @Html.ActionLink("Create New", "Create")
                    </p>*@
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Staff.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.funeralBookingId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Member)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Coffin)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FuneralType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.adress)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Staff.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.funeralBookingId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Member)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Coffin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FuneralType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.adress)
                            </td>


                            <td>
                                <a href="@Url.Action("Details","AssignStaffs", new { id=item.AssignId })" rel="tooltip" title="View" class="btn btn-info btn-simple btn-xs">Details<i class="fa fa-eye"></i></a>
                                <a href="@Url.Action("Edit","AssignStaffs", new { id=item.AssignId })" rel="tooltip" title="Edit" class="btn btn-success btn-simple btn-xs">Edit<i class="fa fa-edit"></i></a>
                                <a href="@Url.Action("Delete", "AssignStaffs", new { id = item.AssignId })" rel="tooltip" title="Remove" class="btn btn-danger btn-simple btn-xs">Delete<i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>

    </center>



</body>
</html>